<UserControl x:Class="ExampleReadAndShowRkiData.Controls.DiagramControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExampleReadAndShowRkiData.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="225" d:DesignWidth="300"
             MinHeight="225" MinWidth="300" 
             MaxHeight="225" MaxWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <Border BorderThickness="1" 
                BorderBrush="Black" 
                Height="200">
            <StackPanel x:Name="SimpleDiagram" 
                    Orientation="Horizontal" 
                    FlowDirection="LeftToRight" 
                    HorizontalAlignment="Left" />
        </Border>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="Steigungswerte" Command="{Binding}" />
        </StackPanel>
    </Grid>
   
    
</UserControl>
